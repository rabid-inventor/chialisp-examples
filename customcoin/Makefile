LISPCOPM = run
LISPEXEC = brun
SOURCEPATH = ./
CURRENTFILE = messagecoin.clmv
COMPFILE = test.lsp
INCLUDEPATH = ''../include/'
SOLUTIONARGS = (100 200 300 400)

all: $(CURRENTFILE)
	$(LISPCOPM) -i=$(INCLUDEPATH) '$(SOURCEPATH)$(CURRENTFILE)' > $(SOURCEPATH)$(COMPFILE)

run: $(COMPFILE)
	$(LISPEXEC) $(SOURCEPATH)$(COMPFILE) '$(SOLUTIONARGS)'

clean:
	rm $(COMPFILE)
